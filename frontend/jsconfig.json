{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]  // Or "./frontend/src/*" if applicable
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "vite.config.*"
  ],
  "exclude": ["node_modules", "dist"]
}